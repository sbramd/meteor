{
	"name": "meteor",
	"version": "0.1.0",
	"private": true,
	"dependencies": {
		"@testing-library/jest-dom": "^5.11.4",
		"@testing-library/react": "^11.1.0",
		"@testing-library/user-event": "^12.1.10",
		"@types/jest": "^26.0.15",
		"@types/node": "^12.0.0",
		"@types/react": "^17.0.0",
		"@types/react-dom": "^17.0.0",
		"react": "^17.0.2",
		"react-dom": "^17.0.2",
		"react-router-dom": "^5.2.0",
		"react-scripts": "^4.0.3",
		"styled-components": "^5.0.1",
		"typescript": "~4.1.2"
	},
	"scripts": {
		"start": "react-scripts start",
		"build": "react-scripts build",
		"test": "react-scripts test --watchAll=false",
		"test:watch": "yarn test -- --watch",
		"test:coverage": "yarn test -- --coverage --watchAll=false",
		"test:open-coverage": "open ./coverage/lcov-report/index.html",
		"eject": "react-scripts eject",
		"lint:check": "eslint . --ext .js,.jsx,.ts,.tsx",
		"lint:fix": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
		"stylelint:check-config": "stylelint-config-prettier-check",
		"stylelint:check-css": "stylelint 'src/**/*.style.ts'",
		"stylelint:fix": "stylelint 'src/**/*.style.ts' --fix",
		"prettier:check": "prettier --check 'src/**/*.{js,jsx,ts,tsx,json}'",
		"prettier:format": "prettier --write 'src/**/*.{js,jsx,ts,tsx,json}'",
		"prebuild": "yarn run lint:check && yarn run stylelint:check-css && rm -rf build",
		"deploy": "serve -s build -l 4000",
		"docz:dev": "docz dev --port=4838",
		"docz:build": "docz build",
		"docz:serve": "docz build && docz serve"
	},
	"browserslist": {
		"production": [
			">0.2%",
			"not dead",
			"not op_mini all"
		],
		"development": [
			"last 1 chrome version",
			"last 1 firefox version",
			"last 1 safari version"
		]
	},
	"devDependencies": {
		"@types/styled-components": "^5.1.9",
		"@typescript-eslint/eslint-plugin": "^4.25.0",
		"@typescript-eslint/parser": "^4.25.0",
		"babel-plugin-macros": "^3.1.0",
		"babel-plugin-styled-components": "^1.12.0",
		"docz": "^2.3.1",
		"eslint": "^7.27.0",
		"eslint-config-airbnb": "^18.2.1",
		"eslint-config-airbnb-typescript": "^12.3.1",
		"eslint-config-prettier": "^8.3.0",
		"eslint-plugin-import": "^2.23.3",
		"eslint-plugin-jest": "^24.3.6",
		"eslint-plugin-jsx-a11y": "^6.4.1",
		"eslint-plugin-prettier": "^3.4.0",
		"eslint-plugin-react": "^7.23.2",
		"eslint-plugin-react-hooks": "^4.2.0",
		"husky": "^4.2.3",
		"lint-staged": "^10.2.11",
		"prettier": "^2.3.0",
		"serve": "^11.3.2",
		"stylelint": "^13.2.0",
		"stylelint-config-prettier": "^8.0.2",
		"stylelint-config-rational-order": "^0.1.2",
		"stylelint-config-standard": "^20.0.0",
		"stylelint-config-styled-components": "^0.1.1",
		"stylelint-order": "^4.1.0",
		"stylelint-prettier": "^1.2.0"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged",
			"pre-push": "yarn test"
		}
	}
}
